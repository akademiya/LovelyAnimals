<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/parent_vertical_margin"
    android:paddingLeft="@dimen/parent_horizontal_margin"
    android:paddingRight="@dimen/parent_horizontal_margin"
    android:paddingTop="@dimen/parent_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/drawer_logo"
        android:layout_height="@dimen/drawer_logo"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_decorator"
        android:backgroundTint="@color/white"
        android:src="@drawable/dog" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Lovely Animals"
        android:textAllCaps="true"
        android:textSize="@dimen/drawer_app_name_size"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vadym.adv@gmail.com" />

</LinearLayout>